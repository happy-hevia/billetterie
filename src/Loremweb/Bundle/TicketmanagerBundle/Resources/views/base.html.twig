<html >
<head >
    <meta charset="UTF-8" />
    <title >{% block title %}Billetterie du musée du Louvre{% endblock %}</title >

    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/loremwebticketmanager/image/logo.png') }}" />

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >

        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/base.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/layout.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/module.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/state.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/theme.css') }}" >

        <link rel="stylesheet" href="{{ asset('bundles/loremwebticketmanager/css/bootstrap-datetimepicker.min.css') }}" >

    {% endblock %}


</head >
<body >
<!-- Menu -->
<nav class="navbar navbar-default" >
    <div class="container" >

        <div class="navbar-header" >
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false" >
                <span class="sr-only" >Toggle navigation</span >
                <span class="icon-bar" ></span >
                <span class="icon-bar" ></span >
                <span class="icon-bar" ></span >
            </button >

            <a class="navbar-brand" href="http://www.louvre.fr/" >
                <img alt="Brand" class="logo" src="{{ asset("bundles/loremwebticketmanager/image/logo.png") }}" width=50 height=50 />
            </a >
            <span class="menu-titre" >Billetterie du Louvre</span >

        </div >

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" >
            <div class="pull-right" >
                <a href="http://www.louvre.fr/" class="btn btn-sm btn-default menu-bouton" >Retour à la page d'accueil</a >
                <form class="form-inline form-langue" >
                    <div class="form-group" >
                        <select name="langue" id="lanque" class="form-control" >
                            <option value="français" >Français</option >
                            <option value="anglais" >English</option >
                        </select >
                    </div >
                </form >
            </div >
        </div >
    </div >
</nav >

<!-- Main content -->
<div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 contenuPrincipal col-sm-push-1 col-md-push-2 col-lg-push-3 " >
    <h1 >Réservation de billets</h1 >
    {% block body %}

    {% endblock %}

</div >
<div class="clearfix" ></div >

<!-- footer -->

<footer >
    <div class="text-center" ><span >Copyright Musée du Louvre 2016 © Tous droits réservés</span > -
        <a href="" >Mentions légales et CGV</a ></div >
</footer >

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.js" ></script >
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.js" ></script >
{% endblock %}
</body>
</html >
