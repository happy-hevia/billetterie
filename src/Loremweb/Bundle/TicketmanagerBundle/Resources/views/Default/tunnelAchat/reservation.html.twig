{# charge le theme bootstrap si le formulaire est pr√©sent #}
{% if formReservation is defined %}
    {% form_theme formReservation with ["bootstrap_3_horizontal_layout.html.twig"] %}
{% endif %}
<div role="tabpanel" class="panel panel-default tab-pane {% if etape == 2 %}active{% endif %}" id="reservation" >




    <div class="panel-heading" >
        <h2 class="panel-title" >Tarif</h2 >
    </div >
    <div class="panel-body" >
        <p >Merci de remplir le formulaire ci-dessous :</p >

        {% if formReservation is defined %}
            {{ form_start(formReservation, {'attr': {'action': path('reservation'), 'id': 'formReservation', novalidate: 'novalidate'}}) }}
            {{ form_widget(formReservation) }}
            {{ form_end(formReservation) }}
        {% endif %}

    </div >

</div >
